@model IEnumerable<Clinic.Models.Appointment>
@{
    ViewData["Title"] = "My Appointments";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Appointment Date</th>
            <th>Patient</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appt in Model)
        {
            <tr>
                <td>@appt.AppointmentDate?.ToString("g")</td>
                <td>@appt.Patient.Name @appt.Patient.Surname</td>
                <td>@appt.Status</td>
                <td>
                    <a asp-area="Doctor" asp-controller="DoctorAppointments" asp-action="Details" asp-route-id="@appt.AppointmentId" class="btn btn-sm btn-primary">
                        Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
