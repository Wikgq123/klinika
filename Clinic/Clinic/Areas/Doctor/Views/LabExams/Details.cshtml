@model Clinic.Models.LabExam
@{
    ViewData["Title"] = "Exam Result";
}

<h2>@ViewData["Title"]</h2>

<dl class="row">
    <dt class="col-sm-2">Patient</dt>
    <dd class="col-sm-10">@Model.Appointment.Patient.Name @Model.Appointment.Patient.Surname</dd>

    <dt class="col-sm-2">Exam</dt>
    <dd class="col-sm-10">@Model.ExamSelection.Name</dd>

    <dt class="col-sm-2">Order Date</dt>
    <dd class="col-sm-10">@Model.RequestDate.ToString("g")</dd>

    <dt class="col-sm-2">Exam Date</dt>
    <dd class="col-sm-10">@Model.ExamDate?.ToString("g")</dd>

    <dt class="col-sm-2">Result</dt>
    <dd class="col-sm-10">@Model.Result</dd>

    <dt class="col-sm-2">Lab Tech Notes</dt>
    <dd class="col-sm-10">@Model.HeadLabNotes</dd>
</dl>

<a asp-area="Doctor"
   asp-controller="DoctorAppointments"
   asp-action="Details"
   asp-route-id="@Model.AppointmentId"
   class="btn btn-secondary">
    Back to Appointment
</a>
