@{
    ViewData["Title"] = "Order Physical Exam";
    var appointment = ViewBag.Appointment as Clinic.Models.Appointment;
    var exams = ViewBag.Exams as IEnumerable<Clinic.Models.ExamSelection>;
}
<h2>@ViewData["Title"]</h2>
<p>Patient: @appointment?.Patient.Name @appointment?.Patient.Surname</p>
<form asp-action="Order" method="post">
    <input type="hidden" name="appointmentId" value="@appointment?.AppointmentId" />
    <div class="mb-3">
        <label class="form-label">Exam</label>
        <select class="form-control" name="examSelectionId" asp-items="@(new SelectList(exams, "Shortcut", "Name"))">
            <option value="">-- select exam --</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Notes</label>
        <textarea name="notes" class="form-control" rows="4"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-area="Doctor" asp-controller="DoctorAppointments" asp-action="Details" asp-route-id="@appointment?.AppointmentId" class="btn btn-secondary">Cancel</a>
</form>
