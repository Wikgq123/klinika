@model IEnumerable<LabExam>

<h2>Completed Lab Exams</h2>
<table class="table">
    <thead>
        <tr>
            <th>Exam</th>
            <th>Technician</th>
            <th>Result</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var exam in Model)
    {
        <tr>
            <td>@exam.ExamSelection?.Name</td>
            <td>@exam.PerformedBy</td>
            <td>@exam.Result</td>
            <td>
                <form asp-action="ApproveExam" method="post">
                    <input type="hidden" name="id" value="@exam.LabExamId" />
                    <button type="submit" class="btn btn-success">Approve</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
